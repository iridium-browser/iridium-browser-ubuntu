    "blacklist_store_unittest.cc",
    "image_manager_unittest.cc",
    "suggestions_service_unittest.cc",
    "suggestions_store_unittest.cc",
  ]
  deps = [
    ":suggestions",
    "//testing/gmock",
    "//testing/gtest",
  ]
}
