import("//build/config/features.gni")

static_library("language_detection") {
  sources = [
    "language_detection_util.cc",
    "language_detection_util.h",
  ]

  deps = [
    "//base",
    "//components/translate/core/common",
    "//url",
  ]

  if (cld_version == 1) {
    deps += [ "//third_party/cld" ]
  }
  if (cld_version == 2) {
    deps += [ "//third_party/cld_2" ]
  }
}
